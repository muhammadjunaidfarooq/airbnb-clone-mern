<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>
  <div class="card col-6 offset-3 mb-3 show-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing image"
    />
    <div class="card-body mb-2">
      <p class="card-text ps-3">
        <b><%= listing.title %></b> <br />
        <%= listing.description %> <br />
        &#8360; <%= listing.price.toLocaleString("en-PK") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <div class="btns offset-3">
    <form method="GET" action="/listings/<%= listing.id %>/edit">
      <button class="btn btn-dark offset-2 edit-btn">Edit</button>
    </form> &nbsp; &nbsp; &nbsp;
    <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
</div>
