<% layout("/layouts/boilerplate.ejs") %>
<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-8 offset-2">
      <h3><%= listing.title %></h3>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card mb-3 show-card listing-card">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="listing image"
        />
        <div class="card-body mb-2">
          <p class="card-text">
            <%= listing.description %> <br />
            &#8360; <%= listing.price.toLocaleString("en-PK") %> <br />
            <%= listing.location %> <br />
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6 d-flex">
      <form method="GET" action="/listings/<%= listing.id %>/edit">
        <button class="btn btn-dark edit-btn">Edit</button>
      </form>
      <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
  </div>
</div>

<div class="col-8 offset-3 mb-3">
  <hr />
  <h4>Leave a review</h4>
  <form
    action="/listings/<%= listing.id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mt-3 mb-3">
      <label for="rating" class="form-labal">Rating</label>
      <input
        min="1"
        max="5"
        type="range"
        id="rating"
        name="review[rating]"
        class="form-range"
      />
    </div>
    <div class="mt-3 mb-3">
      <label for="comment" class="form-labal">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="5"
        rows="4"
        class="form-control mb-3"
        required
      ></textarea>
      <div class="invalid-feedback">Comments should be required!</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>

<div class="col-8 offset-3 mb-3">
  <hr />
  <p><b>All Reviews</b></p>
  <div class="row">
    <% for (review of listing.reviews) {%>
    <div class="card mb-2 col-5 ms-3">
      <div class="card-body">
        <h5 class="card-title">Jhon Doe</h5>
        <p class="card-text"><%= review.comment%></p>
        <p class="card-text"><%=review.rating%> star</p>
      </div>
      <form
        method="POST"
        action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE"
        class="mb-3"
      >
        <button class="btn btn-sm btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
