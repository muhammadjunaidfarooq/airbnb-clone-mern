<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form
      action="/listings"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Enter a catchy title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          placeholder="Write the description here..."
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <label for="img" class="form-lable">Upload listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          id="img"
          required
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            type="text"
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">Price should be valid!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Bahawalpur, Punjab"
            id="location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-lable">Country</label>
        <input
          type="text"
          name="listing[country]"
          placeholder="Pakistan"
          id="country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Country name should be valid!</div>
      </div>
      <button type="submit" class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
